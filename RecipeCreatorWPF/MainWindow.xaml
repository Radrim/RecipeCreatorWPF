<Window x:Class="RecipeCreatorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeCreatorWPF"
        mc:Ignorable="d"
        Title="DishCreat" MinHeight="800" MinWidth="1280"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="9*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Dish Creator" Style="{StaticResource HeaderTextBlock}"></TextBlock>
        </StackPanel>

        <Frame Grid.Row="1" x:Name="MainFrame" BorderThickness="0"  NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
